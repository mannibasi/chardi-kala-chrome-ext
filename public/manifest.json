{
  "name": "Chardi Kala",
  "description": "An extension to spread positivity",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/chardi_kala_128x128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "images/chardi_kala_16x16.png",
    "32": "images/chardi_kala_32x32.png",
    "48": "images/chardi_kala_48x48.png",
    "128": "images/chardi_kala_128x128.png"
  },
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "permissions": ["sidePanel"],
  "host_permissions": ["https://*/*"]
}